{
  "name": "pr-reviewer",
  "version": "1.0.0",
  "description": "AI-powered PR reviewer bot",
  "type": "module",
  "main": "dist/index.js",
  "engine": {
    "node": ">=20.0.0 <24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && probot run ./dist/index.js",
    "dev": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs --external:probot --external:pino --external:pino-pretty --external:tree-sitter --external:tree-sitter-* --external:chromadb && probot run ./dist/index.cjs",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "chromadb": "^3.2.2",
    "minisearch": "^7.2.0",
    "openai": "^6.16.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "probot": "^14.2.4",
    "simple-git": "^3.30.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-go": "^0.25.0",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-typescript": "^0.23.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
